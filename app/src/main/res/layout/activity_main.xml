<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textColor="@color/black"
        android:backgroundTint="@color/teal_200"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/user_page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Page"
        android:textColor="@color/black"
        android:backgroundTint="@color/teal_200"
        android:layout_marginBottom="16dp" />
    <Button
        android:id="@+id/show_invitations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show invitations"
        android:textColor="@color/black"
        android:backgroundTint="@color/teal_200"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Sample Data"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/writeDiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="write diary"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/viewDiariesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Diaries"
        app:layout_constraintTop_toBottomOf="@+id/writeDiary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.05"/>

    <Button
        android:id="@+id/createGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Group"/>

    <Button
        android:id="@+id/viewGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Groups"/>



</LinearLayout>